extend layout

  
block content 
  .homepage
    h1 Messages

    if user && user.member === true
      div 
        each message in all_messages
          div(class="fullMemberMessageView")
            div
              h4 #{user.fullName}
              p #{message.timestamp}
              if user.admin === true 
                a(href=message.url + "/delete") Delete
            h3 #{message.title}
            p #{message.text}
        else 
          div(class="emptyIndicator")
            h3 No Posts 
          
    else if user && user.member === false
      div 
        each message in all_messages
          div(class="memberMessageView")
            h3 #{message.title}
            p #{message.text}
            span Become a full member to see who wrote this post
        else 
          div(class="emptyIndicator")
            h3 No Posts 
         
    else 
      div 
        each message in all_messages
          div(class="visitorMessageView")
            h3 #{message.title}
            p #{message.text}
            span Become a full member to see who wrote this post
        else 
          div(class="emptyIndicator")
            h3 No Posts 
     

