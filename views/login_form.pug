extends layout 

block content 
    .logInPage
        h1 Log In 

        form(method="POST", action="")
            .logInFormGroup 
                div 
                    label(for="email") Email Address
                    input#email(type="email" name="email" required=true value=(undefined===user? "" : user.email))
                    if message 
                        span(class="errorMsg") #{message}  
                div
                    label(for="password") Password
                    input#password(type="password" name="password" required=true )  
            button(type="submit" class="logInBtn") Log In
        