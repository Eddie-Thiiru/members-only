extends layout 

block content 
    .newMessagePage 
        h1 New post 

        form(method="POST" action="")
            .messageFormGroup 
                div 
                    label(for="messageTitle") Title
                    input#messageTitle(type="text" name="title" required=true value=(undefined===message ? "" : message.title))  
                div
                    label(for="messageText") Text
                    textarea#messageText(rows="10" name="text" required=true value=(undefined===message ? "" : message.text))  
            button(type="submit" class="messageBtn") Submit

        if errors 
            ul 
                for error in errors 
                    li!=error.msg